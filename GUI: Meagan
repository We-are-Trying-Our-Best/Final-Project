            B.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'B'));
                window.close();
            });
            C = new Button("Bulldog");
            C.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'C'));
                window.close();
            });
            D = new Button("Labrador");
            D.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'D'));
                window.close();
            });
            layout1 = new VBox(20);
            layout1.getChildren().addAll(Q, A, B, C, D);
            scene = new Scene(layout1, 800, 500);
            window.setScene(scene);
            window.showAndWait();
        }

        if (number == 4) {
            Q = new Label("What is Rick's \"universe number\" in Rick and Morty?");
            A = new Button("C-133");
            A.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'A'));
                window.close();
            });
            B = new Button("C-137");
            B.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'B'));
                window.close();
            });
