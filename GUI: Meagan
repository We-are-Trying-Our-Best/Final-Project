import javafx.geometry.Insets;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.layout.GridPane;
import javafx.scene.layout.VBox;
import javafx.stage.Modality;
import javafx.stage.Stage;

import java.util.concurrent.atomic.AtomicBoolean;

public class Meagan {
    public static boolean Display(int number) {
        GridPane grid;
        Stage window;
        Label Q;
        Button A, B, C, D;
        Scene scene;
        VBox layout1;
        AtomicBoolean score = new AtomicBoolean(false);

        grid = new GridPane();
        grid.setPadding(new Insets(10, 10, 10, 10));
        grid.setVgap(10);
        grid.setHgap(10);

        window = new Stage();
        window.initModality(Modality.APPLICATION_MODAL);
        window.setTitle("Category: Media");
        window.setMinWidth(1000);

        if (number == 1) {
            Q = new Label("What is the name of the movie that Michael Scott makes in The Office?");
            A = new Button("Threat Level Midnight");
            A.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'A'));
                window.close();
            });
            B = new Button("The Office: An American Workplace");
            B.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'B'));
                window.close();
            });
            C = new Button("Battlestar Galactica");
            C.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'C'));
                window.close();
            });
            D = new Button("The Dundies");
            D.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'D'));
                window.close();
            });
            layout1 = new VBox(20);
            layout1.getChildren().addAll(Q, A, B, C, D);
            scene = new Scene(layout1, 800, 500);
            window.setScene(scene);
            window.showAndWait();
        }

        if (number == 2) {
            Q = new Label("What was the name of Friends before it was called \'Friends\'?");
            A = new Button("Central Perk");
            A.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'A'));
                window.close();
            });
            B = new Button("Six of One");
            B.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'B'));
                window.close();
            });
            C = new Button("The One");
            C.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'C'));
                window.close();
            });
            D = new Button("None of the above, Friends was the only name for the show");
            D.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'D'));
                window.close();
            });
            layout1 = new VBox(20);
            layout1.getChildren().addAll(Q, A, B, C, D);
            scene = new Scene(layout1, 800, 500);
            window.setScene(scene);
            window.showAndWait();
        }

        if (number == 3) {
            Q = new Label("What kind of dog is Brian from Family Guy?");
            A = new Button("Beagle");
            A.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'A'));
                window.close();
            });
