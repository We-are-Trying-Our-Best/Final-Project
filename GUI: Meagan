            C.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'C'));
                window.close();
            });
            D = new Button("Caterpie");
            D.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'D'));
                window.close();
            });
            layout1 = new VBox(20);
            layout1.getChildren().addAll(Q, A, B, C, D);
            scene = new Scene(layout1, 800, 500);
            window.setScene(scene);
            window.showAndWait();
        }

        if (number == 0) {
            Q = new Label("Who is Andrew's hormone monster in Big Mouth?");
            A = new Button("Rick");
            A.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'A'));
                window.close();
            });
            B = new Button("Morty");
            B.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'B'));
                window.close();
            });
            C = new Button("Maurice");
            C.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'C'));
                window.close();
            });
            D = new Button("Steve");
            D.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'D'));
                window.close();
            });
            layout1 = new VBox(20);
            layout1.getChildren().addAll(Q, A, B, C, D);
            scene = new Scene(layout1, 800, 500);
            window.setScene(scene);
            window.showAndWait();
        }

        if (score.get()) {
            return true;
        } else {
            return false;
        }
    }

    public static boolean Answers(int number, char answer) {
        if (number == 1 && answer == 'A') {
            return true;
        }
        if (number == 2 && answer == 'B') {
            return true;
        }
        if (number == 3 && answer == 'D') {
            return true;
        }
        if (number == 4 && answer == 'B') {
            return true;
        }
        if (number == 5 && answer == 'C') {
            return true;
        }
        if (number == 6 && answer == 'D') {
            return true;
        }
        if (number == 7 && answer == 'A') {
            return true;
        }
        if (number == 8 && answer == 'A') {
            return true;
        }
        if (number == 9 && answer == 'D') {
            return true;
        }
        if (number == 0 && answer == 'C') {
            return true;
        } else {
            return false;
        }
    }
}
