            C.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'C'));
                window.close();
            });
            D = new Button("C-142");
            D.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'D'));
                window.close();
            });
            layout1 = new VBox(20);
            layout1.getChildren().addAll(Q, A, B, C, D);
            scene = new Scene(layout1, 800, 500);
            window.setScene(scene);
            window.showAndWait();
        }

        if (number == 5) {
            Q = new Label("In the season \'Freak Show\' of American Horror Story, what is the name of the killer clown?");
            A = new Button("Pogo");
            A.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'A'));
                window.close();
            });
            B = new Button("Rusty");
            B.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'B'));
                window.close();
            });
            C = new Button("Twisty");
            C.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'C'));
                window.close();
            });
            D = new Button("Bozo");
            D.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'D'));
                window.close();
            });
            layout1 = new VBox(20);
            layout1.getChildren().addAll(Q, A, B, C, D);
            scene = new Scene(layout1, 800, 500);
            window.setScene(scene);
            window.showAndWait();
        }

        if (number == 6) {
            Q = new Label("According to the episode \'Mrs. Puff, You're Fired\', how many times has Spongebob failed the boating exam?");
            A = new Button("25");
            A.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'A'));
                window.close();
            });
            B = new Button("69");
            B.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'B'));
                window.close();
            });
            C = new Button("420");
            C.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'C'));
                window.close();
            });
            D = new Button("1,258,056");
            D.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'D'));
                window.close();
            });
            layout1 = new VBox(20);
            layout1.getChildren().addAll(Q, A, B, C, D);
            scene = new Scene(layout1, 800, 500);
            window.setScene(scene);
            window.showAndWait();
        }

        if (number == 7) {
            Q = new Label("What is Leslie Knope's favorite food in Parks and Recreation?");
            A = new Button("Waffles");
            A.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'A'));
                window.close();
            });
            B = new Button("Pancakes");
            B.setOnAction(e -> {
                score.set(Meagan.Answers(number, 'B'));
                window.close();
